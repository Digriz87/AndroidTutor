<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        />


    <ImageView
        android:id="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:background="#8BC34A"
        android:layout_gravity="top"

        />

    <ImageView
        android:id="@+id/backspace"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginTop="10px"
        android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:onClick="backClick"
                />
    <ImageView
        android:id="@+id/share"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginTop="20px"
        android:src="@drawable/ic_share_white_24dp"
        android:layout_gravity="right"
        android:onClick="shareClick"
        />

    <TextView

        android:id="@+id/text_main_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="donuts"
        android:layout_marginTop="12px"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8px"
        android:textColor="#ffffff"
        />

    <ImageView
        android:id="@+id/shadow_title_main"
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="#717171"
        android:layout_marginTop="100px"
        />

    <LinearLayout
        android:id="@+id/linear_layout_text_bottom"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_marginTop="500px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:orientation="horizontal"
        >




    </LinearLayout>
    <Button
        android:id="@+id/button_test"
        android:layout_width="700px"
        android:layout_height="90px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30px"
        android:layout_marginBottom="20px"
        android:text="Пройти тест"
        android:textColor="#FFFFFF"
        android:onClick="button_click_test"
        android:background="@drawable/corners_button_next_activity"

        />



</FrameLayout>