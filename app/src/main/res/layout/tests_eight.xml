<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:id="@+id/main_frame"
    >

    <ImageView
        android:id="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:background="#8BC34A"
        android:layout_gravity="top"

        />
    <TextView

        android:id="@+id/text_main_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ТЕСТЫ"
        android:layout_marginTop="20px"
        android:layout_marginRight="250px"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8px"
        android:textColor="#ffffff"

        />
    <ImageView
        android:id="@+id/backspace"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginTop="10px"
        android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
        android:onClick="backClick"
        />

    <ImageView
        android:id="@+id/shadow_title_main"
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="#717171"
        android:layout_marginTop="100px"
        />

<ScrollView
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="110px"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Как назначить слушателя на кнопку?"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:gravity="center_horizontal"
            android:textColor="#33691E"
            android:textSize="35px"
            />
<Button
    android:id="@+id/button_one"
    android:layout_width="500px"
    android:layout_height="120px"
    android:background="@drawable/style_button_tests"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50px"
    android:text="clickListener = new ClickListener"
    android:onClick="checkAnswer"
    android:tag="false"
    />

    <Button
        android:id="@+id/button_two"
        android:layout_width="500px"
        android:layout_height="120px"
        android:background="@drawable/style_button_tests"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:text="extends OnClicklListener"
        android:onClick="checkAnswer"
        android:tag="false"
        />
    <Button
        android:id="@+id/button_three"
        android:layout_width="500px"
        android:layout_height="120px"
        android:background="@drawable/style_button_tests"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:text="view.setOnClickListener"
        android:onClick="checkAnswer"
        android:tag="true"
        />

        <TextView
            android:id="@+id/question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Зачем implements view.OnClickListener?"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:gravity="center_horizontal"
            android:textColor="#33691E"
            android:textSize="35px"
            />
        <Button
            android:id="@+id/button_four"
            android:layout_width="500px"
            android:layout_height="120px"
            android:background="@drawable/style_button_tests"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:text="Создаем метод OnClick который будет являтся обработчиком"
            android:onClick="checkAnswer"
            android:tag="true"
            />

        <Button
            android:id="@+id/button_five"
            android:layout_width="500px"
            android:layout_height="120px"
            android:background="@drawable/style_button_tests"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:text="Добавляет библиотеку"
            android:onClick="checkAnswer"
            android:tag="false"
            />
        <Button
            android:id="@+id/button_six"
            android:layout_width="500px"
            android:layout_height="120px"
            android:background="@drawable/style_button_tests"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:text="включает обработчик"
            android:onClick="checkAnswer"
            android:tag="false"
            />
    </LinearLayout>
</ScrollView>





</FrameLayout>